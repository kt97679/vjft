CXX = g++
CXXFLAGS = -std=c++17 -Wall
LDFLAGS = -lpthread -lsqlite3
BOOST_LIBS = -lboost_system

TARGET = client
SOURCES = client.cpp database.cpp
OBJECTS = $(SOURCES:.cpp=.o)

all: $(TARGET)

$(TARGET): $(OBJECTS)
	$(CXX) $(CXXFLAGS) -o $(TARGET) $(OBJECTS) $(BOOST_LIBS) $(LDFLAGS)

%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm -f $(OBJECTS) $(TARGET)

.PHONY: all clean
